<tr>
  <td>
    <%= sale.name %>
  </td>
  <td>
    <%= sale.starts_on %>
  </td>
  <td>
    <%= sale.ends_on %>
  </td>
  <td>
    <% if sale.finished? %>
    <span class="btn btn-sm btn-danger">Finished</span>
    <% elsif sale.pending? %>
    <span class="btn btn-sm btn-warning">Pending</span>
    <% else %>
    <span class="btn btn-sm btn-success">Active</span>
    <% end %>
  </td>
  <td>
    <%= sale.percent_off %>
  </td>
  <td>
    <%#= link_to fa_icon('trash'), [:admin, sale], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
  </td>
</tr>